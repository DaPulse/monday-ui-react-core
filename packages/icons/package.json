{
  "name": "@vibe/icons",
  "version": "0.0.1",
  "description": "Vibe's icon library",
  "repository": "git+https://github.com/mondaycom/vibe.git",
  "author": "monday.com",
  "license": "MIT",
  "main": "./dist/src/index.js",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "plop": "plop",
    "build": "yarn clean && yarn build:react-icons && yarn build:esm",
    "build:esm": "rollup -c",
    "build:react-icons": "svg2react-icon --typescript --keep-colors src/svg/ src/react/ --no-sub-dir",
    "clean": "rm -rf dist",
    "clean:icons": "rm -rf src/react",
    "lint": "yarn validate-icons",
    "lint:fix": "yarn lint -- --fix",
    "validate-icons": "node scripts/validate-meta.js && node scripts/icons/validate-icons-colors.js",
    "generate-meta": "node scripts/generate-meta.js"
  },
  "devDependencies": {
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "svg2react-icon": "^3.1.178",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  }
}
