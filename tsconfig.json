{
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": "./src",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "dist1",
    "declarationDir": "sosHelp",

    "allowSyntheticDefaultImports": true,
    "paths": {
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"]
    },
    "jsx": "react-jsx"

  },
}