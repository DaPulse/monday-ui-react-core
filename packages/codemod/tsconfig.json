{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6"],
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": false,
    "types": ["node", "jscodeshift"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "transformations/**/*", "types/**/*", "bin/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
