{
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext", "dom"],
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*.js",
    "**/__tests__/**/*.test.ts"
  ]
}
